<% include ../partials/header %>
	<h1>Add Album</h1>
	<form method="post" enctype="multipart/form-data" action="/albums/add">
		<div class="form-group">
			<label>Artist </label>
			<input type="text" name="artist" class="form-control" placeholder="Artist Name">
		</div>
		<div class="form-group">
			<label>Title </label>
			<input type="text" name="title" class="form-control" placeholder="Album Title">
		</div>
		<div class="form-group">
			<label>Genre</label>
			<select name="genre" class="form-control">
				<% for(var i=0; i<genres.length; i++){ %>
				<option value="<%= genres[i].name %>"><%= genres[i].name %></option>
			<% } %>
			</select>
		</div>
		<div class="form-group">
			<label>Album Info </label>
			<textarea class="form-control" name="info" placeholder="Album Info"></textarea>
		</div>
		<div class="form-group">
			<label>Release Year </label>
			<input type="text" name="year" class="form-control">
		</div>
		<div class="form-group">
			<label>Record label </label>
			<input type="text" name="label" class="form-control">
		</div>
		<div class="form-group">
			<label>Number of Tracks </label>
			<input type="text" name="tracks" class="form-control">
		</div>
		<div class="form-group">
			<label>Album Cover </label>
			<input type="file" name="cover" class="form-control">
		</div>
		<button type="submit" class="btn btn-default">Submit</button>
		<a class="btn btn-danger" href="/albums">Close</a>
	</form>
<% include ../partials/footer %>